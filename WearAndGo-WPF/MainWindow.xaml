<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WearAndGo_WPF"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        WindowStartupLocation="CenterScreen"
        Loaded="pageLoad"
        Closing="PageClosing"
        MinHeight="576" MinWidth="1024"
        FontFamily="Bahnschrift"
        ui:ThemeManager.RequestedTheme="Dark"
        Title="Wear and Go" Background="{x:Null}">
    <Grid>
        <ui:Frame HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="mainFrame">
            <ui:Frame.ContentTransitions>
                <ui:NavigationThemeTransition>
                    <ui:EntranceNavigationTransitionInfo/>
                </ui:NavigationThemeTransition>
            </ui:Frame.ContentTransitions>
        </ui:Frame>

    </Grid>
</Window>
