<Page x:Class="view_yourCart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WearAndGo_WPF"
       xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d"
      SizeChanged="resizeWindow"
      MinHeight="600" MinWidth="800"
      Title="view_hero">
    <Grid Name="mainwindow">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" MinWidth="400">
                    <ui:ScrollViewerEx>
                        <WrapPanel Name="cartItemContainer">
                            
                        </WrapPanel>
                    </ui:ScrollViewerEx>
                </StackPanel>
                <StackPanel Grid.Column="1" MinWidth="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <GroupBox Header="Transaction Commands">
                        <Button Content="Clear All Items"/>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
