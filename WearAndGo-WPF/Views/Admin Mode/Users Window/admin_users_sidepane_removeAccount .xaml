<UserControl x:Class="admin_users_sidepane_removeAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WearAndGo_WPF"
             mc:Ignorable="d"
             Width="450" Height="auto">
    <Grid>
        <StackPanel>
            <GroupBox Margin="30" Header="Remove an Account">
                <ScrollViewer Name="scroller">

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="30 0 0 0">


                        <Label Content="Account Username" Margin="0 30 0 0"/>
                        <TextBox Name="AccountUsername"/>

                        <Label Content="Confirm Admin Password" Margin="0 30 0 0"/>
                        <PasswordBox Name="AccountPasswordConfirm"/>

                        <Button Margin="0 50 0 0" Click="RemoveAccount" HorizontalAlignment="Stretch" Content="Remove Account"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
